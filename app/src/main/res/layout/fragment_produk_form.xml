<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7"
    android:fillViewport="true"
    tools:context=".ProdukFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/product_form_title"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNamaProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/form_input_background"
            android:hint="@string/product_form_hint_name"
            android:inputType="textCapWords"
            android:padding="14dp" />

        <EditText
            android:id="@+id/etHargaProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/form_input_background"
            android:hint="@string/product_form_hint_price"
            android:inputType="numberDecimal"
            android:padding="14dp" />

        <EditText
            android:id="@+id/etStokProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/form_input_background"
            android:hint="@string/product_form_hint_stock"
            android:inputType="number"
            android:padding="14dp" />

        <EditText
            android:id="@+id/etDiskonProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/form_input_background"
            android:hint="@string/product_form_hint_discount"
            android:inputType="numberDecimal"
            android:padding="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:text="@string/product_form_label_category"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spKategori"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/form_input_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

        <CheckBox
            android:id="@+id/cbPromo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/product_form_checkbox_promo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnKembali"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:paddingVertical="12dp"
                android:text="@string/product_form_button_back"
                android:textAllCaps="false"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSimpan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:paddingVertical="12dp"
                android:text="@string/product_form_button_save"
                android:textAllCaps="false"
                app:cornerRadius="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>